<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.InboxFragment"
    android:background="@drawable/bg_profile">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/img_Profilepic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user_profile_picture"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="25dp"
            />
        <TextView
            android:id="@+id/tv_UserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_Profilepic"
            android:text="username"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/tv_UseridIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_UserName"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="150dp"
            android:background="@drawable/profile_id_icon"
            />
        <TextView
            android:id="@+id/tv_UserId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/tv_UseridIcon"
            app:layout_constraintTop_toBottomOf="@+id/tv_UserName"
            android:text="0122456"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"

            />
        <TextView
            android:id="@+id/tv_Follower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Follow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_UseridIcon"
            android:layout_marginLeft="98dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/Liner"
            />
        <TextView
            android:id="@+id/tv_Friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friends"
            android:textColor="@color/Liner"
            app:layout_constraintStart_toEndOf="@+id/tv_Follower"
            app:layout_constraintTop_toBottomOf="@+id/tv_UserId"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="30dp"
            />
        <TextView
            android:id="@+id/tv_Viewr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Viewers"
            android:textColor="@color/Liner"
            app:layout_constraintStart_toEndOf="@+id/tv_Friend"
            app:layout_constraintTop_toBottomOf="@+id/tv_UserId"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"
            />
        <TextView
            android:id="@+id/tv_Followers"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:textColor="@color/Liner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_Follower"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/tv_Friends"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:textColor="@color/Liner"
            app:layout_constraintStart_toEndOf="@+id/tv_Followers"
            app:layout_constraintTop_toBottomOf="@+id/tv_Friend"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:id="@+id/tv_Viewrs"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:textColor="@color/Liner"
            app:layout_constraintStart_toEndOf="@+id/tv_Friends"
            app:layout_constraintTop_toBottomOf="@+id/tv_Viewr"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="10dp"
            android:backgroundTint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_Friends">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_WaletIcon"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:shadowRadius="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/profile_wallet_icon"/>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="315dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:text="Walet"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_WaletIcon"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>





        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>