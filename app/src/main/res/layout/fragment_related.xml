<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.RelatedFragment"
    android:background="@color/background_gray"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons_Related"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/textview3">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/tap_to_creater_room"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_CreateRoom"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:text="Create Room.."
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:text="Welcome Note"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/tv_CreateRoom" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="16dp"
            android:text="999"
            android:textColor="@color/black"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cons_Related"
        android:background="@color/white"
        >
        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabitem_Recent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recent"
            />
        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabitem_Joined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Joined"
            />
        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabitem_Following"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Following"
            />
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/related_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tabLayout"
        />

</RelativeLayout>